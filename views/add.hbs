<h1 style="text-align:center">Ajouter un laur√©at</h1>
<div class="container">
    <form action="/vue" method="post">
        <select name="category" id="category" class="form-control">
            {{#each categories}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <div class="row">
            <div class="col-md-6">
                <input type="text" name="firstname" id="firstname" placeholder="Firstname" class="form-control">
            </div>
            <div class="col-md-6">
                <input type="text" name="surname" id="surname" placeholder="Surname" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <input type="number" name="year" id="year" placeholder="Year" class="form-control">
            </div>
            <div class="col-md-6">
                <input type="text" name="motivation" id="motivation" placeholder="Motivation" class="form-control">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </form>
</div>